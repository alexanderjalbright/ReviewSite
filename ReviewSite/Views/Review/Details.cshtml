@model ReviewSite.Models.Review
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Details.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans|Ubuntu" rel="stylesheet">
    <title>Details</title>
</head>
<body>
    <div class="container">
        <header></header>A
        <main>
            <div class="content">
                <h1 class="course-title">@Model.Title</h1>
                <div class="course-rating">
                    @for (int i = 0; i < Model.SolidStars(); i++)
                    {
                        <i class="fas fa-star fa-2x"></i>
                    }
                    @for (int i = 0; i < Model.HalfStars(); i++)
                    {
                        <i class="fas fa-star-half-alt fa-2x"></i>
                    }
                    @for (int i = 0; i < Model.EmptyStars(); i++)
                    {
                        <i class="far fa-star fa-2x"></i>
                    }
                    <span class="num-reviews">(@Model.UserReviews.Count())</span>
                </div>
                <div class="course-nav">
                    <a href="#">Overview</a> |
                    <a href="#">Reviews</a>
                </div>
                <hr />
                <div class="course-content">
                    @foreach (var userReview in Model.UserReviews)
                    {
                        <h2>Username: @userReview.UserName</h2>
                        <h3>Rating: @userReview.Rating</h3>
                        <p>"@userReview.Comment"</p>
                        <br /><br />
                    }
                </div>
            </div>
            <aside>
                <img class="post-img" src="@Model.ImageURL" />
                <div class="post-details">
                    <p><span>Subject: </span>Computer Science</p>
                    <p><span>Start Date: </span>January 1st, 2025</p>
                    <p><span>Duration: </span>14 Weeks</p>
                    <p><span>Price: </span>FREE</p>
                </div>
            </aside>
        </main>
        <footer></footer>
    </div>
</body>
</html>

 